# Database Configuration
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@localhost:5432/bixor?sslmode=disable

# Server Configuration
PORT=8080
API_VERSION=1.0.0

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=your_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_HOURS=24

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@bixor.io
SMTP_FROM_NAME=Bixor Engine
SMTP_ENABLED=true

BACKEND_SECRET=your-super-secret-key-here-change-in-production